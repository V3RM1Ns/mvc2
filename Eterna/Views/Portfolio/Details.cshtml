@model Eterna.ViewModels.PortfolioVm

@{
    Layout = "_Layout";
}

<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="container">
    <nav class="breadcrumbs">
      <ol>
        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="current">Portfolio Details</li>
      </ol>
    </nav>
    <h1>Portfolio Details</h1>
  </div>
</div><!-- End Page Title -->

<!-- Portfolio Details Section -->
<section id="portfolio-details" class="portfolio-details section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">
      <div class="col-lg-8">
        <div class="portfolio-details-slider swiper init-swiper">
          <script type="application/json" class="swiper-config">
            {
              "loop": true,
              "speed": 600,
              "autoplay": {
                "delay": 5000
              },
              "slidesPerView": "auto",
              "pagination": {
                "el": ".swiper-pagination",
                "type": "bullets",
                "clickable": true
              }
            }
          </script>

          <div class="swiper-wrapper align-items-center">
            @if (Model.Portfolio.PortfolioImgs.Any())
            {
              @foreach (var img in Model.Portfolio.PortfolioImgs)
              {
                <div class="swiper-slide">
                  <img src="~/assets/img/portfolio/@img.ImageUrl" alt="@Model.Portfolio.Title">
                </div>
              }
            }
            else
            {
              <div class="swiper-slide">
                <img src="~/assets/img/portfolio/@Model.Portfolio.ImageUrl" alt="@Model.Portfolio.Title">
              </div>
            }
          </div>
          <div class="swiper-pagination"></div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="portfolio-info" data-aos="fade-up" data-aos-delay="200">
          <h3>Project information</h3>
          <ul>
            <li><strong>Category</strong>: @Model.Portfolio.Category.Name</li>
            <li><strong>Client</strong>: Eterna Company</li>
            <li><strong>Project date</strong>: @DateTime.Now.ToString("dd MMMM, yyyy")</li>
            <li><strong>Project URL</strong>: <a href="#">www.example.com</a></li>
          </ul>
        </div>
        <div class="portfolio-description" data-aos="fade-up" data-aos-delay="300">
          <h2>@Model.Portfolio.Title</h2>
          <p>@Model.Portfolio.Description</p>
        </div>
      </div>
    </div>
  </div>
</section><!-- End Portfolio Details Section -->
